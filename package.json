{
  "name": "aisearchengine",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "postinstall": "node scripts/install-electron.js",
    "lint": "eslint",
    "test": "vitest",
    "electron:dev": "electron .",
    "electron:build": "electron-builder",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@iarna/toml": "^2.2.5",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "express-rate-limit": "^8.2.1",
    "firebase": "^12.8.0",
    "framer-motion": "^12.29.2",
    "groq-sdk": "^0.37.0",
    "helmet": "^8.1.0",
    "lucide-react": "^0.553.0",
    "mongoose": "^8.20.1",
    "next": "16.0.1",
    "node-fetch": "^3.3.2",
    "openai": "^6.9.1",
    "pdf-parse": "^2.4.5",
    "pdf2json": "^4.0.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.9.6",
    "recharts": "^3.7.0",
    "rss-parser": "^3.13.0",
    "validator": "^13.15.26",
    "vitest": "^4.0.18",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@electron/get": "^4.0.2",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/debug": "^4.1.12",
    "@types/electron-is-dev": "^1.1.3",
    "@types/estree-jsx": "^1.0.5",
    "@types/hast": "^3.0.4",
    "@types/iarna__toml": "^2.0.5",
    "@types/mdast": "^4.0.4",
    "@types/ms": "^2.1.0",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/unist": "^3.0.3",
    "@types/validator": "^13.15.10",
    "@vitejs/plugin-react": "^5.1.2",
    "baseline-browser-mapping": "^2.8.32",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9.39.1",
    "eslint-config-next": "16.0.1",
    "extract-zip": "^2.0.1",
    "happy-dom": "^20.4.0",
    "jsdom": "^27.4.0",
    "tailwindcss": "^4.1.17"
  },
  "build": {
    "appId": "com.aisearchengine.app",
    "productName": "AI Stock Analyzer",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron/**/*",
      ".next/**/*",
      "app/**/*",
      "public/**/*",
      "package.json",
      ".env",
      ".env.local",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/**/*",
      ".next/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/icon.png",
      "category": "Finance"
    }
  }
}
